<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="24dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView164"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Promediar mis notas"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView42"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView164"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_icono_procesar" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/conten_alerta_asignar_notas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:id="@+id/imageView50"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_red" />

                    <TextView
                        android:id="@+id/mensaje_alerta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="      No se asignaron las capacidades a evaluar en el Bimestre I."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_red_A700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Comuníquese con su académico o con el encargado a asignar las capacidades a evaluar."
                    android:textSize="12sp"
                    android:textStyle="italic" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView197"
                    tools:visibility="visible">

                    <FrameLayout
                        android:id="@+id/frameLayout4"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="24dp"
                        android:background="#6B809B"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout21"
                        app:layout_constraintTop_toTopOf="parent">


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout6"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:background="@color/grey_300"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout4"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/textView192"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="-"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </FrameLayout>

                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout21"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView11"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="25dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="10sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_icono_matrix_resultados_no_generado"
                            tools:ignore="VectorDrawableCompat" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView113"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout21">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="10sp" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/frameLayout4"
                        app:layout_constraintEnd_toStartOf="@+id/frameLayout6"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout4"
                        app:layout_constraintTop_toTopOf="@+id/frameLayout4"
                        app:srcCompat="@drawable/ic_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/conten_alerta_habilitado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cont_titulo_bloqueo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:id="@+id/imageView51"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_red" />

                    <TextView
                        android:id="@+id/mensaje_alerta_habilitado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="      El Bimestre II esta bloqueado."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_red_A700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cont_titulo_cerrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:id="@+id/imageView52"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_red" />

                    <TextView
                        android:id="@+id/mensaje_alerta_bloqueado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="      Su evaluación del Bimestre II esta cerrado."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_red_A700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="Importante, asegúrese de cerrar su evaluación solo cuando termina de generar los promedios de su registro de evaluación de las Competencia Base y Transversal."
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mensaje_alerta_bloqueado" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout23"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView12"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="25dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="10sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_icono_matrix_resultados"
                            tools:ignore="VectorDrawableCompat" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout6"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:background="@color/grey_300"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout23"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="AD"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/imageView59"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="top|end"
                                android:layout_margin="3dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_block_cent_procesamiento"
                                tools:ignore="VectorDrawableCompat" />
                            
                            <ImageView
                                android:id="@+id/icon_bloqueo"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="3dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_icono_candado"
                                tools:ignore="VectorDrawableCompat" />

                        </FrameLayout>

                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conten_promediar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout26"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView15"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="25dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="10sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_icono_matrix_resultados"
                            tools:ignore="VectorDrawableCompat" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout8"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:background="@color/grey_300"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout26"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="-"
                                android:textAlignment="center"
                                android:textSize="12sp" />


                        </FrameLayout>

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/imageView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/frameLayout10"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow" />

                    <FrameLayout
                        android:id="@+id/frameLayout10"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:background="@color/grey_300"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout8"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="AD"
                                android:textAlignment="center"
                                android:textSize="12sp" />


                        </FrameLayout>

                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btn_cancelar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="10dp"
                    android:text="Cerrar"
                    android:textAllCaps="true"
                    android:textColor="@color/md_grey_700"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/progress"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btn_aceptar"
                    app:layout_constraintStart_toStartOf="@+id/btn_aceptar"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_aceptar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Promediar"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cancelar" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

