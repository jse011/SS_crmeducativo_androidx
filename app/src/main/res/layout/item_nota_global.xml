<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dim_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_bottom_azul"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNombreCapacidadEvaluacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dim_10dp"
            android:paddingTop="@dimen/dim_10dp"
            android:text="Capacidad"
            android:textColor="#002864"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtNotaAD"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:onClick="clickNotaAD"
            android:padding="@dimen/dim_10dp"
            android:text="" />

        <TextView
            android:id="@+id/txtNotaA"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:onClick="clickNotaA"
            android:padding="@dimen/dim_10dp"
            android:text="" />

        <TextView
            android:id="@+id/txtNotaB"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:onClick="clickNotaB"
            android:padding="@dimen/dim_10dp"
            android:text="" />

        <TextView
            android:id="@+id/txtNotaC"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:onClick="clickNotaC"
            android:padding="@dimen/dim_10dp"
            android:text="" />

    </LinearLayout>

</androidx.cardview.widget.CardView>