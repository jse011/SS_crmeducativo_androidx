<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_bottom"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloTalento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/txtDescripcionTalento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Descripcion de la habilidad que tenga este alumno" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cbTalento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</androidx.cardview.widget.CardView>