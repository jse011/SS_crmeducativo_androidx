<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_arrow_down_black_24dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_blue_dark" />

        <CheckBox

            android:id="@+id/txtNombrePadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Padre:" />

        <CheckBox
            android:id="@+id/txtNombreMadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Madre:" />

        <CheckBox
            android:id="@+id/txtNombreTutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor:" />

        <Spinner
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/recomendaciones"
            android:text="click ME !" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medios De envio"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_blue_dark" />


    </LinearLayout>

    <CheckBox


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messenger" />

    <CheckBox

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AppEduCRM" />

    <CheckBox

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />


</LinearLayout>