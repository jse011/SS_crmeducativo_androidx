    <style name="ToolbarTarea" parent="AppTheme">
        <item name="android:textColorSecondary">#6B6A6A</item>
        <item name="android:actionMenuTextColor">#6B6A6A</item>
    </style>

    <style name="ToolbarRubro" parent="AppTheme">
        <item name="android:textColorSecondary">#6B6A6A</item>
